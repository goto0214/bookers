<h1 class="index-h1">Books</h1>
 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
   <% end %>
  </tbody>
 </table>








<h2 class="new-book">New Book</h2>
 <%= form_with model:@book, local: true do |f| %>
 <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
 </div>
 <div class="action"><%= f.submit "Create Book" %></div>
<% end %>